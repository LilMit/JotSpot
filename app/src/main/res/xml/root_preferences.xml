<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_header">

        <SwitchPreferenceCompat
            android:id="@+id/notification_switch"
            app:key="send_notifications"
            app:title="@string/notify_switch_label" />
        <EditTextPreference
            app:key="schedule"
            app:title="@string/notification_frequency"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/time_format_header">

        <SwitchPreferenceCompat
            android:id="@+id/time_switch"
            app:key="24h"
            app:summaryOff="@string/time_off"
            app:summaryOn="@string/time_on"
            app:title="@string/time_format" />
        <ListPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:defaultValue="true"
            app:entries="@array/date_prefs"
            app:entryValues="@string/US_format"
            app:key="dateFormat"
            app:title="@string/date_format"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>