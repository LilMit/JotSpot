<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryTypeSelection">

    <ImageButton
        android:id="@+id/select_text_entry"
        android:layout_width="83dp"
        android:layout_height="70dp"
        android:background="#8BCCEA"
        android:contentDescription="text journal entry"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/audio_entry_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_text_entry" />

    <ImageButton
        android:id="@+id/audio_entry_button"
        android:layout_width="83dp"
        android:layout_height="70dp"
        android:background="#7AC0E5"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_text_entry"
        app:srcCompat="@drawable/ic_audio_entry" />

</androidx.constraintlayout.widget.ConstraintLayout>